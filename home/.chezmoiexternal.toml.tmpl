{{ $ezaVersion := (gitHubLatestRelease "eza-community/eza").TagName -}}
[".local/bin/eza"]
    type = "archive-file"
    url = "https://github.com/eza-community/eza/releases/download/{{ $ezaVersion }}/eza_x86_64-unknown-linux-gnu.tar.gz"
    exact = true
    executable = true
    refreshPeriod = "168h"
    path = "./eza"

